{
    "name": "Kwery AI",
    "manifest_version": 3,
    "action": {
        "default_title": "Kwery AI - Ask questions on any page"
    },
    "background": {
        "service_worker": "js/worker.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": "Ctrl+Q"
        }
    },
    "icons": {
        "16": "icons/kweryai16.png",
        "48": "icons/kweryai48.png",
        "64": "icons/kweryai64.png",
        "128": "icons/kweryai128.png"
    },
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": false
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "notifications",
        "scripting",
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/kweryai64.png", "css/script.css"],
            "matches": ["<all_urls>"],
            "use_dynamic_url": true
        }
    ]
}
